<div class="center-main">


<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:", class: "mb-8 text-sm font-medium text-gray-900 sr-only dark:text-white"%>
    <div class="relative">
        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
            </svg>
        </div>
  <%= form.text_field :query, class: "block w-full p-4 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "username, ex: jean-felipe" %>
  <%= form.submit "Search", class: "text-white absolute right-2.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>

    </div>
<% end %>

<% if @repositories %>
  <% if @repositories.is_a? String %>
    <p>No repositories found</p>
  <% else %>
    <% @repositories.each do |repo| %>
    </br>
      <div class="px-10 py-8 mx-auto max-w-6xl rounded overflow-hidden shadow-lg">
        <div class="px-6 py-4">
          <div class="font-bold text-xl mb-2"><%= repo[:name] %></div>
          <p class="text-gray-700 text-base">
            github_id: <%= repo[:github_id] %>
          </p>
          <p class="text-gray-700 text-base">
            stars: <%= repo[:stars] %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

</div>


